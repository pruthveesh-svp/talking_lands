tionClasses.fontSize = '1.8rem';\r\n      }\r\n    },\r\n    removeHoverEffect(element) {\r\n      if (element === 'title') {\r\n        this.titleClasses.fontSize = '3rem';\r\n      } else if (element === 'description') {\r\n        this.descriptionClasses.fontSize = '1.5rem';\r\n      }\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.farming-section {\r\n  background-size: cover;\r\n  background-position: center;\r\n  height: 100vh;\r\n  display: flex;\r\n  align-items: center;\r\n  color: #fff;\r\n  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);\r\n  border-radius: 20px; \r\n  overflow: hidden; \r\n}\r\n\r\n.title {\r\n  font-size: 3rem;\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.description {\r\n  font-size: 1.5rem;\r\n  opacity: 0.9;\r\n}\r\n\r\n.button-container {\r\n  margin-top: 20px;\r\n}\r\n\r\n.change-background-btn,\r\n.mode-toggle-btn {\r\n  padding: 10px 20px;\r\n  margin: 0 10px;\r\n  border: none;\r\n  border-radius: 5px;\r\n  font-size: 1rem;\r\n  cursor: pointer;\r\n  transition: background-color 0.3s ease;\r\n}\r\n\r\n.change-background-btn {\r\n  background-color: #3498db;\r\n  color: #fff;\r\n}\r\n\r\n.mode-toggle-btn {\r\n  background-color: #e74c3c;\r\n  color: #fff;\r\n}\r\n\r\n.change-background-btn:hover,\r\n.mode-toggle-btn:hover {\r\n  background-color: #2980b9;\r\n}\r\n</style>\r\n"],"mappings":"AAwBA,eAAe;EACbA,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,eAAe,EAAEC,OAAO,CAAC,uBAAuB,CAAC;MACjDC,SAAS,EAAE,MAAM,CAAE;IACrB,CAAC;EACH,CAAC;;EACDC,QAAQ,EAAE;IACRC,YAAYA,CAAA,EAAG;MACb,OAAO;QACLC,QAAQ,EAAE,MAAM;QAChB,2BAA2B,EAAE;UAC3BA,QAAQ,EAAE;QACZ;MACF,CAAC;IACH,CAAC;IACDC,kBAAkBA,CAAA,EAAG;MACnB,OAAO;QACLD,QAAQ,EAAE,QAAQ;QAClB,2BAA2B,EAAE;UAC3BA,QAAQ,EAAE;QACZ;MACF,CAAC;IACH;EACF,CAAC;EACDE,OAAO,EAAE;IACPC,qBAAqBA,CAACC,QAAQ,EAAE;MAC9B,IAAI,CAACT,eAAc,GAAIS,QAAQ;IACjC,CAAC;IACDC,cAAcA,CAAA,EAAG;MACf,IAAI,IAAI,CAACR,SAAQ,KAAM,MAAM,EAAE;QAC7B,IAAI,CAACA,SAAQ,GAAI,MAAM,EAAE;MAE3B,OAAO;QACL,IAAI,CAACA,SAAQ,GAAI,MAAM,EAAE;MAC3B;IACF,CAAC;;IACDS,gBAA